//-------------------------------Variables ----------------------------------------------------------------

var canvas = document.getElementById("myCanvas");
var ctx = canvas.getContext("2d");
var paddleHeight = 10;
var paddleWidth = 75;
var StartingX = (canvas.width-paddleWidth)/2;
var StartingY = canvas.height;
var Displacement = 10;
var ballRadius = 10;
var BrickHeight = 5;
var BrickWidth =10;
var Rows = 10;
var Columns = 4;
var WIDTH = 900;
var leftPressed = false;
var rightPressed = false;

//------------------------------Make Paddle-----------------------------------------------------------------

function Paddle() {
    ctx.beginPath();
    ctx.rect(StartingX, StartingY-10, paddleWidth, paddleHeight);
    ctx.fillStyle = "#FF33CC";
    ctx.fill();
    ctx.closePath();
}//drawpaddle










function draw() {
	ctx.clearRect(0, 0, canvas.width, canvas.height);
	Paddle();
    Ball();
    Move();
	}

	draw();




</script>

